<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net452;netstandard2.0</TargetFrameworks>
    <Configurations>Debug;Release;ReleaseNetStandard</Configurations>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="DotNetZip" Version="1.9.3" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
    <ProjectReference Include="..\ScriptEngine\ScriptEngine.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <ReleaseNumber Condition="'$(ReleaseNumber)' == ''">19</ReleaseNumber>
    <BuildNumber Condition="'$(BUILD_NUMBER)' != ''">$(BUILD_NUMBER)</BuildNumber>
    <BuildNumber Condition="'$(BUILD_NUMBER)' == ''">0</BuildNumber>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyName>ScriptEngine.HostedScript</AssemblyName>
    <AssemblyDescription>1C (BSL) language runtime</AssemblyDescription>
    <RootNamespace>ScriptEngine.HostedScript</RootNamespace>

    <Version>1.0.$(ReleaseNumber).$(BuildNumber)</Version>
    <FileVersion>$(Version)</FileVersion>
    <Description>1C (BSL) language runtime</Description>
    <Copyright>Copyright (c) 2017 EvilBeaver</Copyright>

  </PropertyGroup>
  
  <ItemGroup>
	  <None Include="oscript.cfg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
  <Target Name="CopyToRunner" AfterTargets="Build" Condition="'$(TargetFramework)' == 'net452'">
    <Message Text="Copying StandaloneRunner resources" />
    <ItemGroup>
      <CopyToStandalone Include="$(TargetPath)" />
      <CopyToStandalone Include="$(TargetDir)Ionic.Zip.dll" />
      <CopyToStandalone Include="$(TargetDir)Newtonsoft.Json.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(CopyToStandalone)" DestinationFolder="$(SolutionDir)StandaloneRunner\" />
  </Target>
  
</Project>