{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Extension",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"stopOnEntry": false
		},
		{
			"type": "oscript",
			"request": "launch",
			"name": "Server",
			"program": "${workspaceRoot}/bin/x86/Debug/DebugServer.exe",
			"args": [ "-trace" ]
		}
	],
	"compounds": [
		{
			"name": "Extension + Server",
			"configurations": [ "Extension", "Server" ]
		}
	]
}