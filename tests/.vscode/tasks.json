{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "Run Debug engine test",
            "problemMatcher": [
                "$OneScript Linter"
            ],
            "command": "../src/oscript/bin/x86/Debug/net452/oscript.exe",
            "args": [
                "testrunner.os", "-run", "${file}"
            ],
            "group": "build"
        }
    ]
}